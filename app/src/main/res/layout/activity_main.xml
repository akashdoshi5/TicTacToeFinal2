<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:visibility="visible"
    tools:context="appmec.com.tictactoefinal.MainActivity">

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@drawable/oneplayer"
        android:fontFamily="casual"
        android:padding="20dp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/adView1"
        android:layout_alignStart="@+id/adView1"
        android:layout_alignRight="@+id/adView1"
        android:layout_alignEnd="@+id/adView1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@drawable/twoplayer"
        android:fontFamily="casual"
        android:padding="20dp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/button1"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1"
        android:layout_alignRight="@+id/button1"
        android:layout_alignEnd="@+id/button1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@drawable/exit"
        android:fontFamily="casual"
        android:padding="20dp"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginTop="27dp"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7860341576927713/4927864384"></com.google.android.gms.ads.AdView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Choose Player"
        android:textColor="@android:color/white"
        android:textColorHighlight="@android:color/primary_text_dark"
        android:textSize="40dp"
        android:textStyle="bold" />

</RelativeLayout>
