<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:visibility="visible"
    tools:context="appmec.com.tictactoefinal.OnePlayer">

    <TableLayout
        android:id="@+id/mainBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="top|center"
        android:layout_marginTop="15dp"
        android:background="@drawable/layout"
        android:clickable="true"
        android:gravity="center"
        android:nestedScrollingEnabled="false"
        android:padding="10dp">

        <TableRow
            android:id="@+id/tableRow1"
            style="@style/TableRow">

            <Button
                android:id="@+id/one"
                style="@style/LeftCell"
                android:background="@android:color/transparent"
                android:text="@string/none" />

            <Button
                android:id="@+id/two"
                style="@style/MiddleCell"
                android:background="@android:color/transparent"
                android:text="@string/none" />

            <Button
                android:id="@+id/three"
                style="@style/RightCell"
                android:background="@android:color/transparent"
                android:text="@string/none" />

        </TableRow>


        <TableRow
            android:id="@+id/tableRow2"
            style="@style/TableRow">

            <Button
                android:id="@+id/four"
                style="@style/LeftCell"
                android:background="@android:color/transparent"
                android:text="@string/none" />

            <Button
                android:id="@+id/five"
                style="@style/MiddleCell"
                android:background="@android:color/transparent"
                android:text="@string/none" />

            <Button
                android:id="@+id/six"
                style="@style/RightCell"
                android:background="@android:color/transparent"
                android:text="@string/none" />

        </TableRow>


        <TableRow
            android:id="@+id/tableRow3"
            style="@style/TableRow">


            <Button
                android:id="@+id/seven"
                style="@style/LeftCell"
                android:background="@android:color/transparent"
                android:text="@string/none" />

            <Button
                android:id="@+id/eight"
                style="@style/MiddleCell"
                android:background="@android:color/transparent"
                android:text="@string/none" />

            <Button
                android:id="@+id/nine"
                style="@style/RightCell"
                android:background="@android:color/transparent"
                android:text="@string/none" />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/dialogue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainBoard"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="Start Game!"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/scorelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/score"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="X         VS          O"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/reset"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="0         0          0"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/reset"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_above="@+id/adView2"
        android:layout_alignLeft="@+id/mainBoard"
        android:layout_alignParentRight="@+id/mainmenu"
        android:background="@drawable/reset" />

    <Button
        android:id="@+id/mainmenu"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_above="@+id/adView2"
        android:layout_alignEnd="@+id/adView2"
        android:layout_alignRight="@+id/adView2"
        android:background="@drawable/menu" />

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7860341576927713/4927864384"></com.google.android.gms.ads.AdView>
</RelativeLayout>



